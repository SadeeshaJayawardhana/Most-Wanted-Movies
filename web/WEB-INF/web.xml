<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- SubmitReviewServlet Mapping -->
    <servlet>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <servlet-class>com.movie.servlet.ReviewsManagement.SubmitReviewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <url-pattern>/submitReview</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDownloadServlet</servlet-name>
        <servlet-class>com.movie.servlet.DownloadsManagement.DeleteDownloadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteDownloadServlet</servlet-name>
        <url-pattern>/DeleteDownloadServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>guest.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>UnrentMovieServlet</servlet-name>
        <servlet-class>com.movie.servlet.RentalManagement.UnrentMovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnrentMovieServlet</servlet-name>
        <url-pattern>/UnrentMovieServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddWatchLaterServlet</servlet-name>
        <servlet-class>com.movie.servlet.WatchLaterListManagement.AddWatchLaterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddWatchLaterServlet</servlet-name>
        <url-pattern>/AddWatchLaterServlet</url-pattern>
    </servlet-mapping>

</web-app>
